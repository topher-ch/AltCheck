<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:viewModels="clr-namespace:alternator_analyser.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1030" d:DesignHeight="500"
        x:Class="alternator_analyser.Views.MainWindow"
        Title="AltCheck"
        Width="1030"
        Height="500"
        CanResize="False">
    
    <Grid RowDefinitions="Auto" ColumnDefinitions="Auto,Auto">
        <lvc:CartesianChart Grid.Row="0" Grid.Column="0" Width="800" Height="500" Padding="10, 10, 0, 10"
                                    LegendPosition="Right"
                                    TooltipPosition="Hidden"
                                    XAxes="{Binding XAxes}">
            <lvc:CartesianChart.YAxes>
                <lvc:XamlAxis
                    AxisName="L                          R"
                    MinLimit="{Binding NegativeAxisMinOrMax}"
                    MaxLimit="{Binding PositiveAxisMinOrMax}"/>
            </lvc:CartesianChart.YAxes>
            
            <lvc:CartesianChart.Series>
                <lvc:XamlStackedColumnSeries
                    SeriesName="{Binding WholeName}"
                    Values="{Binding WholeLeftValues}"
                    StackGroup="0"
                    MiniatureStrokeThickness="2">
                    <lvc:XamlStackedColumnSeries.Fill>
                        <lvc:SolidColorPaint Color="#555B61"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Fill>
                    <lvc:XamlStackedColumnSeries.Stroke>
                        <lvc:SolidColorPaint Color="#FFFFFF"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Stroke>
                </lvc:XamlStackedColumnSeries>
                
                <lvc:XamlStackedColumnSeries
                    IsVisibleAtLegend="False"
                    Values="{Binding WholeRightValues}"
                    StackGroup="0"
                    MiniatureStrokeThickness="2">
                    <lvc:XamlStackedColumnSeries.Fill>
                        <lvc:SolidColorPaint Color="#555B61"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Fill>
                    <lvc:XamlStackedColumnSeries.Stroke>
                        <lvc:SolidColorPaint Color="#FFFFFF"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Stroke>
                </lvc:XamlStackedColumnSeries>
                
                <lvc:XamlStackedColumnSeries
                    SeriesName="{Binding HalfName}"
                    Values="{Binding HalfLeftValues}"
                    StackGroup="0"
                    MiniatureStrokeThickness="2">
                    <lvc:XamlStackedColumnSeries.Fill>
                        <lvc:SolidColorPaint Color="#0E8999"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Fill>
                    <lvc:XamlStackedColumnSeries.Stroke>
                        <lvc:SolidColorPaint Color="#FFFFFF"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Stroke>
                </lvc:XamlStackedColumnSeries>
                
                <lvc:XamlStackedColumnSeries
                    IsVisibleAtLegend="False"
                    Values="{Binding HalfRightValues}"
                    StackGroup="0"
                    MiniatureStrokeThickness="2">
                    <lvc:XamlStackedColumnSeries.Fill>
                        <lvc:SolidColorPaint Color="#0E8999"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Fill>
                    <lvc:XamlStackedColumnSeries.Stroke>
                        <lvc:SolidColorPaint Color="#FFFFFF"></lvc:SolidColorPaint>
                    </lvc:XamlStackedColumnSeries.Stroke>
                </lvc:XamlStackedColumnSeries>
                
                <lvc:XamlStackedColumnSeries
