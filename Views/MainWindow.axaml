            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>
        
        <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="Auto,2,Auto,10,Auto,10,Auto,10,Auto,2,Auto,10,Auto,2,Auto" ColumnDefinitions="Auto,Auto" Margin="10" ColumnSpacing="10">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DonHandTitle}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding KatHandTitle}"/>
            
            <ComboBox Grid.Row="2" Grid.Column="0" Width="100" Height="32"
                      SelectedIndex="{Binding DonHand}"
                      ItemsSource="{Binding DonHandOptions}"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Width="100" Height="32"
                      SelectedIndex="{Binding KatHand}"
                      ItemsSource="{Binding KatHandOptions}"/>
            
            <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                      Content="{Binding ResetOnFinisherTitle}" 
                      IsChecked="{Binding ResetOnFinisher}"/>
            <CheckBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                      Content="{Binding ResetOnSnapTitle}" 
                      IsChecked="{Binding ResetOnSnap}"/>
            
            <TextBlock Grid.Row="8" Grid.Column="0" 
                       Text="{Binding SnapDivisorTitle}"/>
            <TextBlock Grid.Row="8" Grid.Column="1" 
                       Text="{Binding SnapBpmTitle}"/>
            
            <ComboBox Grid.Row="10" Grid.Column="0" Width="100" Height="32"
                      Opacity="{Binding SnapDivisorOpacity}"
                      SelectedIndex="{Binding SnapDivisor}"
                      ItemsSource="{Binding SnapDivisorOptions}"/>
            <TextBox Grid.Row="10" Grid.Column="1" Width="100" Height="32" VerticalAlignment="Top"
                     Opacity="{Binding SnapBpmOpacity}"
                     Text="{Binding SnapBpm, UpdateSourceTrigger=LostFocus}"/>
            
            <TextBlock Grid.Row="12" Grid.Column="0" 
                       Text="{Binding LowerMarkerTitle}"/>
            <TextBlock Grid.Row="12" Grid.Column="1" 
                       Text="{Binding UpperMarkerTitle}"/>
            
            <TextBox Grid.Row="14" Grid.Column="0" Width="100" Height="32" VerticalAlignment="Top" 
                     Text="{Binding LowerMarker, UpdateSourceTrigger=LostFocus}"/>
            <TextBox Grid.Row="14" Grid.Column="1" Width="100" Height="32" VerticalAlignment="Top" 
                     Text="{Binding UpperMarker, UpdateSourceTrigger=LostFocus}"/>
        </Grid>
    </Grid>
</Window>
